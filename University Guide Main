<body>
  <header>
    <h1>대학교 가이드 사이트</h1>
    <nav>
      <a href="#grad">졸업학점 계산기</a>
      <a href="#rank">성적 계산기</a>
      <a href="#gpa">학점 계산기</a>
    </nav>
  </header>

  <main>
    <section id="grad">
      <h2>졸업학점 계산기</h2>
      전공: <input type="number" id="major" />
      교양: <input type="number" id="liberal" />
      일반: <input type="number" id="general" />
      <button onclick="calcGraduation()">계산</button>
      <div class="result" id="gradResult"></div>
    </section>

    <section id="rank">
      <h2>성적 계산기</h2>
      평균: <input type="number" id="avg" />
      표준편차: <input type="number" id="sd" />
      원점수: <input type="number" id="score" />
      전체 인원: <input type="number" id="total" />
      <button onclick="calcRank()">계산</button>
      <div class="result" id="rankResult"></div>
    </section>

    <section id="gpa">
      <h2>학점 계산기</h2>
      학점 입력 (예: A+ 3학점 → 4.5):<br/>
      <textarea id="grades" rows="5" cols="40" placeholder="4.5\n4.0\n3.5..."></textarea><br/>
      <button onclick="calcGPA()">계산</button>
      <div class="result" id="gpaResult"></div>
    </section>
  </main>

  <script>
    function calcGraduation() {
      const major = parseInt(document.getElementById("major").value) || 0;
      const liberal = parseInt(document.getElementById("liberal").value) || 0;
      const general = parseInt(document.getElementById("general").value) || 0;
      const total = major + liberal + general;
      const required = 130;
      const result = required - total;
      document.getElementById("gradResult").textContent =
        result > 0 ? `졸업까지 ${result}학점 남았습니다.` : "졸업 요건을 충족했습니다!";
    }

    function calcRank() {
      const avg = parseFloat(document.getElementById("avg").value);
      const sd = parseFloat(document.getElementById("sd").value);
      const score = parseFloat(document.getElementById("score").value);
      const total = parseInt(document.getElementById("total").value);

      const z = (score - avg) / sd;
      const p = 0.5 * (1 + erf(z / Math.sqrt(2)));
      const rank = Math.ceil((1 - p) * total);

      document.getElementById("rankResult").textContent =
        `상위 약 ${(p * 100).toFixed(2)}% (예상 등수: ${rank}등)`;
    }

    function erf(x) {
      const sign = x >= 0 ? 1 : -1;
      x = Math.abs(x);

      const a1 = 0.254829592;
      const a2 = -0.284496736;
      const a3 = 1.421413741;
      const a4 = -1.453152027;
      const a5 = 1.061405429;
      const p = 0.3275911;

      const t = 1 / (1 + p * x);
      const y = 1 - (((((a5 * t + a4) * t + a3) * t + a2) * t + a1) * t) * Math.exp(-x * x);

      return sign * y;
    }

    function calcGPA() {
      const lines = document.getElementById("grades").value.trim().split("\n");
      const nums = lines.map(Number).filter(n => !isNaN(n));

      if (nums.length === 0) {
        document.getElementById("gpaResult").textContent = "유효한 학점을 입력해주세요.";
        return;
      }

      const sum = nums.reduce((a, b) => a + b, 0);
      const avg = sum / nums.length;
      document.getElementById("gpaResult").textContent = `총 평균 학점: ${avg.toFixed(2)}`;
    }
  </script>
</body>
